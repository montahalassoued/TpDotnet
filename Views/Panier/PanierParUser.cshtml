@model IEnumerable<WebApplication1.Models.PanierParUser>

@{
    ViewData["Title"] = "My Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="mb-4">
                <i class="bi bi-cart3"></i> My Shopping Cart
            </h1>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered">
                        <thead class="table-primary">
                            <tr>
                                <th>#</th>
                                <th>Product Name</th>
                                <th>Description</th>
                                <th>Unit Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Added Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                decimal totalGeneral = 0;
                                int itemIndex = 1;
                            }
                            @foreach (var item in Model)
                            {
                                var total = item.Produit!.Prix * item.Quantite;
                                totalGeneral += total;
                                <tr>
                                    <td>@itemIndex</td>
                                    <td>
                                        <strong>@item.Produit.Nom</strong>
                                    </td>
                                    <td>
                                        @if (string.IsNullOrEmpty(item.Produit.Description))
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                        else
                                        {
                                            @item.Produit.Description
                                        }
                                    </td>
                                    <td class="text-end">
                                        <strong>@item.Produit.Prix.ToString("C")</strong>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@item.Quantite</span>
                                    </td>
                                    <td class="text-end">
                                        <strong>@total.ToString("C")</strong>
                                    </td>
                                    <td class="text-muted small">
                                        @item.DateAjout.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                    </td>
                                </tr>
                                itemIndex++;
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Card -->
                <div class="row mt-4">
                    <div class="col-md-4 offset-md-8">
                        <div class="card bg-light border-primary">
                            <div class="card-body">
                                <h5 class="card-title">Order Summary</h5>
                                <hr />
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Subtotal:</span>
                                    <span>@totalGeneral.ToString("C")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Shipping:</span>
                                    <span class="text-success">Free</span>
                                </div>
                                <hr />
                                <div class="d-flex justify-content-between h5">
                                    <strong>Total:</strong>
                                    <strong class="text-primary">@totalGeneral.ToString("C")</strong>
                                </div>
                                <button class="btn btn-primary w-100 mt-3">
                                    <i class="bi bi-credit-card"></i> Checkout
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="alert alert-info text-center py-5" role="alert">
                    <h4 class="mb-3">
                        <i class="bi bi-bag"></i> Your Cart is Empty
                    </h4>
                    <p>You haven't added any products to your cart yet.</p>
                    <p class="text-muted">Start shopping and add items to your cart!</p>
                    <div class="mt-4">
                        <a href="@Url.Action("SeedPanier", "Panier")" class="btn btn-success me-2">
                            <i class="bi bi-plus-circle"></i> Add Test Products
                        </a>
                        <a href="@Url.Action("Index", "Movie")" class="btn btn-primary">
                            <i class="bi bi-shop"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-md-12">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Home
            </a>
        </div>
    </div>
</div>
