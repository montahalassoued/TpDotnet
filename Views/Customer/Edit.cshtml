@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication1.Models.Customer

<div class="min-h-screen bg-gradient-to-r from-indigo-50 via-purple-50 to-pink-50 flex flex-col items-center justify-start py-12 px-6">
    <div class="w-full max-w-4xl bg-white rounded-xl p-12">
        <h2 class="text-4xl font-bold text-center text-indigo-700 mb-12">✏️ Edit Customer</h2>

        <form asp-action="Edit" method="post" class="flex flex-col w-full">
            <input type="hidden" asp-for="Id" />

            <!-- Customer Name -->
            <div class="mb-10"> <!-- plus d'espace -->
                <label asp-for="Name" class="text-gray-700 font-semibold mb-2 block">Customer Name</label>
                <input asp-for="Name" 
                       class="w-full px-4 py-4 focus:outline-none focus:ring-2 focus:ring-indigo-400 transition bg-gray-50 rounded-md" />
                <span asp-validation-for="Name" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <!-- Membership Type -->
            <div class="mb-10"> <!-- plus d'espace -->
                <label asp-for="MembershipTypeId" class="text-gray-700 font-semibold mb-2 block">Membership Name</label>
                <input type="text" name="MembershipName" 
                       value="@Model.MembershipType?.DurationInMonth" 
                       class="w-full px-4 py-4 focus:outline-none focus:ring-2 focus:ring-indigo-400 transition bg-gray-50 rounded-md" />
            </div>

            <!-- Buttons -->
            <div class="flex flex-col sm:flex-row gap-6 pt-6">
                <a asp-action="Index" 
                   class="px-6 py-3 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300 transition font-semibold text-center">
                    Cancel
                </a>
                <button type="submit" 
                        class="px-6 py-3 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition font-semibold text-center">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
/* Buttons */
a, button { min-width: 140px; text-align: center; }

/* Inputs */
input { font-size: 1rem; }

/* Hover effects */
button:hover, a:hover { opacity: 0.9; }
</style>
