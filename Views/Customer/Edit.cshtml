@model WebApplication1.Models.Customer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg rounded-4 border">
                <div class="card-body p-5">
                    <h2 class="card-title text-center text-primary mb-4">✏️ Edit Customer</h2>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <!-- Customer Name -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold">Customer Name</label>
                            <input asp-for="Name" class="form-control form-control-lg" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Membership Duration (readonly) -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Membership Duration (Months)</label>
                            <input type="text" value="@Model.MembershipType?.DurationInMonth" 
                                   class="form-control form-control-lg" disabled />
                            <div class="form-text">
                                This value cannot be changed here. Modify membership types in the Memberships section.
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex flex-column flex-sm-row justify-content-between gap-3 mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg w-100 w-sm-auto">Cancel</a>
                            <button type="submit" class="btn btn-primary btn-lg w-100 w-sm-auto">Save Changes</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
