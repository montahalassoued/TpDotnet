@model WebApplication1.Models.Customer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg rounded-4 border">
                <div class="card-body p-5">
                    <h2 class="card-title text-center text-success mb-4">âž• Create New Customer</h2>

                    <!-- Global errors -->
                    @if (ViewBag.Errors != null && ((List<string>)ViewBag.Errors).Any())
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (string error in ViewBag.Errors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="Create" method="post">

                        <!-- Customer Name -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold">Customer Name</label>
                            <input asp-for="Name" class="form-control form-control-lg" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Membership Type -->
                        <div class="mb-4">
                            <label asp-for="MembershipTypeId" class="form-label fw-semibold">Membership Type</label>
                            <select asp-for="MembershipTypeId" asp-items="ViewBag.MembershipTypes" class="form-select form-select-lg">
                                <option value="">-- Select Membership --</option>
                            </select>
                            <span asp-validation-for="MembershipTypeId" class="text-danger small"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex flex-column flex-sm-row justify-content-between gap-3 mt-3">
                            <a asp-action="Index" class="btn btn-secondary btn-lg w-100 w-sm-auto">Cancel</a>
                            <button type="submit" class="btn btn-success btn-lg w-100 w-sm-auto">Create</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
