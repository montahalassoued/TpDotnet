@model WebApplication1.Models.Customer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="flex flex-col items-center justify-start mt-8 px-4 bg-gray-50 min-h-screen">
    <h2 class="text-3xl font-bold mb-6 text-gray-800 text-center w-full">Create New Customer</h2>
      <!-- Bloc erreurs globales -->
    @if (ViewBag.Errors != null && ((List<string>)ViewBag.Errors).Any())
    {
        <div class="text-red-500 mb-4">
            <ul class="list-disc ml-6">
                @foreach (string error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }
    <div class="w-full max-w-md bg-white p-6 rounded-lg">
        <form asp-action="Create" method="post">
            <!-- Name -->
            <div class="mb-4">
                <label asp-for="Name" class="block text-sm font-medium text-gray-700">Name</label>
                <input asp-for="Name" class="mt-1 block w-full border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <!-- Membership Type -->
            <div class="mb-4">
                <label asp-for="MembershipTypeId" class="block text-sm font-medium text-gray-700">Membership Type</label>
                <select asp-for="MembershipTypeId" asp-items="ViewBag.MembershipTypes"
                        class="mt-1 block w-full border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">-- Select Membership --</option>
                </select>
                <span asp-validation-for="MembershipTypeId" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-end space-x-2">
                <a asp-action="Index" class="btn-cancel">Cancel</a>
                <button type="submit" class="btn-submit">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
.btn-submit { padding: 8px 14px; border-radius: 6px; background-color: #10b981; color: white; font-weight: 600; text-decoration: none; }
.btn-submit:hover { background-color: #059669; }
.btn-cancel { padding: 8px 14px; border-radius: 6px; background-color: #e5e7eb; color: #374151; text-decoration: none; font-weight: 500; }
.btn-cancel:hover { background-color: #d1d5db; }
</style>
