@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="mb-4">
                <i class="bi bi-people"></i> User Management
            </h1>
            <div class="alert alert-info" role="alert">
                <strong>Total Users:</strong> @Model.Count()
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered">
                        <thead class="table-primary">
                            <tr>
                                <th>#</th>
                                <th>Email</th>
                                <th>Username</th>
                                <th>City</th>
                                <th>Email Confirmed</th>
                                <th>Phone Number</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 1;
                            }
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>
                                        <i class="bi bi-envelope"></i>
                                        <a href="mailto:@user.Email">@user.Email</a>
                                    </td>
                                    <td>@user.UserName</td>
                                    <td>@(string.IsNullOrEmpty(user.City) ? "N/A" : user.City)</td>
                                    <td>
                                        @if (user.EmailConfirmed)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Confirmed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning"><i class="bi bi-exclamation-circle"></i> Pending</span>
                                        }
                                    </td>
                                    <td>@(string.IsNullOrEmpty(user.PhoneNumber) ? "N/A" : user.PhoneNumber)</td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-info-circle"></i> No users found in the system.
                </div>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Home
            </a>
        </div>
    </div>
</div>
