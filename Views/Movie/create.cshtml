@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication1.Models.MovieVM

<div class="container mt-5 mb-5">
    <h2 class="text-center mb-4">ðŸŽ¬ Create New Movie</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <!-- Back to List -->
                <div class="mb-3">
                    <a asp-action="Index" class="text-decoration-underline">&larr; Back to List</a>
                </div>

                <!-- Movie Name -->
                <div class="mb-3">
                    <label asp-for="movie.Name" class="form-label">Name</label>
                    <input asp-for="movie.Name" placeholder="Enter Movie name" class="form-control" />
                    <span asp-validation-for="movie.Name" class="text-danger small"></span>
                </div>

                <!-- Movie Added Date -->
                <div class="mb-3">
                    <label asp-for="movie.DateAjoutMovie" class="form-label">Movie Added</label>
                    <input asp-for="movie.DateAjoutMovie" type="datetime-local" class="form-control" />
                    <span asp-validation-for="movie.DateAjoutMovie" class="text-danger small"></span>
                </div>

                <!-- Photo Upload -->
                <div class="mb-3">
                    <label class="form-label">Photo</label>
                    <input type="file" name="photo" class="form-control" />
                    <div class="form-text">No file selected. Max size: 2MB</div>
                </div>

                <!-- Movie Genre -->
                <div class="mb-3">
                    <label asp-for="movie.GenreId" class="form-label">Genre</label>
                    <select asp-for="movie.GenreId" asp-items="@(ViewData["Genres"] as SelectList)" class="form-select">
                        <option value="">-- Select Genre --</option>
                    </select>
                    <span asp-validation-for="movie.GenreId" class="text-danger small"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Back To List</a>
                    <button type="submit" class="btn btn-primary">Save Info</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}