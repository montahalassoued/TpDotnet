@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication1.Models.MovieVM

<div class="flex flex-col items-center justify-center mt-8 px-4 bg-gray-50 min-h-screen">
    <h2 class="text-2xl font-bold mb-6 text-gray-800 text-center w-full">Create New Movie</h2>

    <div class="w-full max-w-md bg-white p-6 rounded-lg shadow-md">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <!-- Back to List -->
            <div class="mb-4">
                <a asp-action="Index" class="text-gray-700 underline text-sm">&larr; Back to List</a>
            </div>

            <!-- Movie Name -->
            <div class="mb-4">
                <label asp-for="movie.Name" class="block text-sm font-medium text-gray-700">Name</label>
                <input asp-for="movie.Name" placeholder="Enter Movie name" 
                       class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="movie.Name" class="text-red-500 text-sm"></span>
            </div>

            <!-- Movie Added Date -->
            <div class="mb-4">
                <label asp-for="movie.DateAjoutMovie" class="block text-sm font-medium text-gray-700">Movie Added</label>
                <input asp-for="movie.DateAjoutMovie" type="datetime-local"
                       class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="movie.DateAjoutMovie" class="text-red-500 text-sm"></span>
            </div>

            <!-- Photo Upload -->
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Photo</label>
                <input type="file" name="photo" class="mt-1 block w-full text-gray-700" />
                <p class="text-sm text-gray-500 mt-1">aucun fichier sélectionné</p>
            </div>
            //movie genre
         <select asp-for="movie.GenreId" asp-items="@(ViewData["Genres"] as SelectList)">
         <option value="">-- Select Genre --</option>
         </select>

            <!-- Buttons -->
            <div class="flex justify-end gap-2 mt-6">
                <a asp-action="Index" class="px-4 py-2 rounded-md bg-gray-300 text-gray-800 font-medium text-sm">Back To List</a>
                <button type="submit" class="px-4 py-2 rounded-md bg-indigo-600 text-white font-medium text-sm">Save Info</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
