@model WebApplication1.Models.Customer

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg rounded-4 border">
                <div class="card-body p-4 text-center">

                    <h2 class="card-title text-danger mb-3">‚ùå Confirm the delete </h2>
                    <p class="mb-4">
                        Do you want to delete the Movie
                        <strong>@Model.Name</strong> ?
                    </p>

                    <form asp-action="Delete" method="post" class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg w-100 w-sm-auto">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg w-100 w-sm-auto">Return </a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
