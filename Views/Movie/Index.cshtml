@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication1.Models.Movie

<div class="min-h-screen bg-gradient-to-r from-indigo-50 via-purple-50 to-pink-50 flex flex-col items-center justify-start py-12 px-6">
    <div class="w-full max-w-6xl bg-white rounded-xl p-10 shadow-lg">
        <h2 class="text-4xl font-bold text-center text-indigo-700 mb-10">ðŸŽ¬ Edit Movie</h2>

        <form asp-action="Edit" asp-controller="Movie" method="post" enctype="multipart/form-data" class="flex flex-col lg:flex-row gap-12 items-start">
            <input type="hidden" asp-for="Id" />

            <!-- Left side: form inputs -->
            <div class="flex-1 flex flex-col space-y-8">
                <!-- Movie Name -->
                <div class="flex flex-col">
                    <label asp-for="Name" class="text-gray-700 font-semibold mb-1">Movie Name</label>
                    <input asp-for="Name" 
                           class="w-full px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-400 transition bg-gray-50 rounded-md" />
                    <span asp-validation-for="Name" class="text-red-500 text-sm mt-1"></span>
                </div>

                <!-- Genre -->
                <div class="flex flex-col">
                    <label asp-for="GenreId" class="text-gray-700 font-semibold mb-1">Genre</label>
                    <select asp-for="GenreId" asp-items="ViewBag.Genres" 
                            class="w-full px-4 py-3 focus:ring-2 focus:ring-indigo-400 transition bg-gray-50 rounded-md">
                        <option value="">-- Select Genre --</option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-red-500 text-sm mt-1"></span>
                </div>

                <!-- Upload Image -->
                <div class="flex flex-col">
                    <label class="text-gray-700 font-semibold mb-1">Upload New Image</label>
                    <input type="file" name="ImageFile" 
                           class="w-full px-3 py-2 focus:ring-2 focus:ring-indigo-400 transition bg-gray-50 rounded-md" />
                </div>

                <!-- Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 pt-6">
                    <a asp-action="Index" 
                       class="px-6 py-3 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300 transition font-semibold text-center">
                        Cancel
                    </a>
                    <button type="submit" 
                            class="px-6 py-3 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition font-semibold text-center">
                        Save Changes
                    </button>
                </div>
            </div>

            <!-- Right side: current image -->
            <div class="flex-shrink-0">
                <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/images/placeholder.png")" 
                     alt="@Model.Name" 
                     class="w-64 h-80 object-cover rounded-lg shadow-lg" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
/* Buttons */
a, button { min-width: 140px; }

/* Inputs & selects */
input, select { font-size: 1rem; }

/* Espacement */
.space-y-8 > * + * { margin-top: 2rem; }
</style>

