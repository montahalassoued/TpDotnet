@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication1.Helpers.PaginatedList<WebApplication1.Models.Movie>

<div class="flex flex-col items-center justify-start mt-8 px-4 bg-gray-50 min-h-screen">
    <h2 class="text-3xl font-bold mb-6 text-gray-800 text-center w-full">Movies</h2>

    <!-- Table Container -->
    <div class="overflow-x-auto w-full max-w-4xl mx-auto">
        <table class="min-w-full border border-gray-300 divide-y divide-gray-200 table-custom">
            <thead class="bg-indigo-200 text-indigo-900">
                <tr>
                    <th class="px-4 py-3 w-3/12">Name</th>
                    <th class="px-4 py-3 w-3/12">Genre</th>
                    <th class="px-4 py-3 w-3/12">Image</th>
                    <th class="px-4 py-3 w-2/12">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var movie in Model)
                {
                    <tr class="hover:bg-indigo-50">
                        <td class="px-4 py-3 text-center">@movie.Name</td>
                        <td class="px-4 py-3 text-center">@movie.Genre?.Name</td>
                        <td class="px-4 py-3 text-center">
                            <img src="@(movie.ImageUrl ?? "/images/placeholder.png")" 
                                 alt="@movie.Name" 
                                 class="image-movie mx-auto rounded" />
                        </td>
                        <td class="px-4 py-3 text-center space-x-1 flex flex-col sm:flex-row sm:justify-center items-center">
                            <a href="@Url.Action("Edit", "Movie", new { id = movie.Id })" class="btn-edit mb-1 sm:mb-0">Edit</a>
                            <a href="@Url.Action("Delete", "Movie", new { id = movie.Id })" class="btn-delete mb-1 sm:mb-0">Delete</a>
                            <a href="@Url.Action("Details", "Movie", new { id = movie.Id })" class="btn-details">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="mt-6 w-full max-w-4xl mx-auto flex justify-end space-x-2">
        @if (Model.HasPreviousPage)
        {
            <a href="@Url.Action("Index", new { page = Model.PageIndex - 1 })" class="btn-page">Précédent</a>
        }
        @if (Model.HasNextPage)
        {
            <a href="@Url.Action("Index", new { page = Model.PageIndex + 1 })" class="btn-page">Suivant</a>
        }
    </div>
</div>

<style>
/* Images */
.image-movie { width: 5rem; height: 6rem; object-fit: cover; }

/* Actions */
.btn-edit { padding: 5px 10px; border-radius: 5px; background-color: #5d57cf; color: white; text-decoration: none; font-size: 0.85rem; }
.btn-edit:hover { background-color: #4b46b5; }

.btn-delete { padding: 5px 10px; border-radius: 5px; background-color: #dc5c5c; color: white; text-decoration: none; font-size: 0.85rem; }
.btn-delete:hover { background-color: #b94646; }

.btn-details { padding: 5px 10px; border-radius: 5px; background-color: #57e88c; color: white; text-decoration: none; font-size: 0.85rem; }
.btn-details:hover { background-color: #3fc367; }

/* Pagination */
.btn-page { padding: 5px 10px; border-radius: 5px; background-color: #e5e7eb; color: #374151; text-decoration: none; font-weight: 500; }
.btn-page:hover { background-color: #d1d5db; }

/* Table */
.table-custom th, .table-custom td { text-align: center; vertical-align: middle; }

</style>
